<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.jrobotlibs</groupId>
  <artifactId>jrobottryout</artifactId>
  <version>0.1</version>
  <packaging>jar</packaging>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <testLibraryClass>com.jrobotlib.ServerLauncher</testLibraryClass>
  </properties>

  <dependencies>
    <dependency>
	    <groupId>com.github.ombre42</groupId>
	    <artifactId>jrobotremoteserver</artifactId>
	    <version>3.0</version>
	</dependency>
  </dependencies>
  
  	<build>
		<plugins>
			<!-- create a jar with all dependencies i.e. a standalone jar -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<archive>
						<manifest>
							<!-- make the jar runnable -->
							<mainClass>${testLibraryClass}</mainClass>
						</manifest>
					</archive>
				</configuration>
				<executions>
					<!-- automatically build the standalone jar during the package phase -->
					<execution>
						<id>make-jar-with-dependencies</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
 			<!-- to start server -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <configuration>
                    <mainClass>${testLibraryClass}</mainClass>
                </configuration>
            </plugin>
           	<!-- for keyword documentation -->
           	<plugin>
		        <groupId>org.robotframework</groupId>
		        <artifactId>robotframework-maven-plugin</artifactId>
		        <version>1.5.1</version>
		        <configuration>
			        <libdoc>
						<outputFile>FancyLibrary.html</outputFile>
						<libraryOrResourceFile>com.jrobotlib.keywords.FancyLibrary</libraryOrResourceFile>
	        		</libdoc>
        		</configuration>
    	  </plugin>
		</plugins>
	</build>
  
</project>
